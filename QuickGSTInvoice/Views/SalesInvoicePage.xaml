<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="QuickGSTInvoice.Views.SalesInvoicePage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label x:Name="description" Text="This demo shows how to create simple invoice report using PDF grid with built-in styles." VerticalOptions="Center" TextColor="Black" Margin="0,0,5,0">
            </Label>
            <Label x:Name="label1" Text=" " VerticalOptions="Center"></Label>

            <Label x:Name="buttonDescription" Text="Please click the Generate PDF button to save and view the PDF document generated by the Syncfusion PDF library."
                  VerticalOptions="Center" TextColor="Black" Margin="0,0,5,0">
            </Label>

            <Label x:Name="label2" Text=" " VerticalOptions="Center"></Label>
            <Button x:Name="generateDocument" Clicked ="OnButtonClicked" Text ="Generate PDF" HorizontalOptions="Start"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>